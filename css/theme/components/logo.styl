.logo
    .header &
        display: flex
        justify-content: center
        align-items: center
        margin: 15px 35px
        width: 80px

        @media media-max-lg
            margin-right: auto

        @media media-max-md
            margin: 10px auto 10px 0
            width: auto

        img, svg
            max-height: 110px
            height: 60px
            transition: all .2s linear
            transition-delay: .2s
            fill: var(--color-text)

            @media media-min-md
                height: 110px

            .scrolling &
                @media media-min-lg
                    max-height: 50px

    .footer &
        color: var(--background)

        a
            color: currentColor

        img, svg
            width: 80px
            height: 110px
            fill: currentColor
