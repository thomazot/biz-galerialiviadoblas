.author
    .std &
        margin-top: 50px

        &__title
            margin-bottom: 30px
            color: var(--primary)
            font-weight: regular
            font-size: 40px

        &__content
            @media media-min-lg
                display: flex

        &__figure
            @media media-min-lg
                flex: 0 1 270px

            @media media-max-lg
                margin-bottom: 20px

        &__text
            color: var(--primary)
            font-weight: regular
            font-size: 16px

            &, p
                line-height: 1.8

            @media media-min-lg
                flex: 1
                margin-left: 60px
                min-width: 0
