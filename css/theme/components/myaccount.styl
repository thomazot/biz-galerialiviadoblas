.myaccount
    .header &
        margin: 0 16px

        @media media-max-md
            margin: 0

    &__header
        color: var(--color-text)
        text-transform: uppercase
        font-weight: medium
        font-size: 12px

        a
            display: flex
            justify-content: center
            align-items: center
            color: currentColor

            @media media-max-md
                display: flex
                justify-content: center
                align-items: center
                width: 50px
                height: 50px

            span
                margin-left: 5px

                @media media-max-md
                    display: none

        .ico
            width: 16px
            height: 18px
            fill: currentColor

    &__content
        display: none !important