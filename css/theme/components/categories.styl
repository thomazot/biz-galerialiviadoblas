.categories
    --background: #f0f3f3

    &__show
        background: none
        color: var(--color-text)

    @media media-max-lg
        .parent
            position: relative

            > ul
                display: none

            &:after
                content: ''

            > a
                display: flex
                justify-content: flex-start
                align-items: center
                min-height: 48px

            &:after
                icon('\f054')

                position: absolute
                top: 0
                right: 0
                z-index: 10
                display: flex
                justify-content: center
                align-items: center
                width: 48px
                height: 48px
                background: var(--primary-contrast)
                font-size: 20px
                transition: all .2s ease

            &.on
                &:after
                    transform: rotate(90deg)

                > ul
                    display: block

        .all-li--0
            padding-bottom: 0

    @media media-min-lg
        position: static
        flex: 1
        align-self: stretch
        margin: 0 -16px
        margin-bottom: 0 !important
        min-width: 0
        min-height: 100%
        background: none

        .ul--0, .li--0, .a--0
            height: 100%

        .ul--0
            position: static

        .ul--1
            column-count: 6

            container()

        &__all
            display: none

        .a--0
            color: var(--color-text)
            text-transform: uppercase
            white-space: nowrap
            font-weight: medium
            font-size: 12px

        .a--1
            padding-right: 0
            padding-left: 0
            font-weight: bold
            font-size: 18px

        .a--2
            padding-right: 0
            padding-left: 0
            color: var(--primary)
            font-weight: regular
            font-size: 14px

        .li--0
            position: static
            flex: 0 0 auto

            &:hover
                .a--0
                    background: none
                    color: var(--color-text)

        .li--1
            break-inside: avoid

            ul, li
                display: contents

            a
                display: block

                &:hover
                    color: var(--primary)
                    text-decoration: underline

        .box--1
            display: block
            padding-bottom: 32px
            width: 100%
            background: var(--background)
            box-shadow: none

            &:before
                display: block
                padding: 16px 0
                color: var(--primary)
                content: attr(data-title)
                font-weight: bold
                font-size: 20px

                container()