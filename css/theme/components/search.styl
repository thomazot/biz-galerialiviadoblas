.search
    .header &
        position: fixed
        top: 0
        left: 0
        z-index: 100
        visibility: hidden
        padding-top: 150px
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, .4)
        opacity: 0

        &--show
            visibility: visible
            opacity: 1

        &__form
            container()

            height: 60px
            background: white

        &__label
            display: flex
            justify-content: center
            align-items: center
            margin: 0
            width: 50px
            color: var(--color-text)

            .ico
                width: 18px
                height: 18px
                fill: currentColor

        &__input
            padding: 0
            height: 100%
            border: 0
            box-shadow: none
            text-overflow: ellipsis

            &::placeholder
                color: var(--color-text)
                font-weight: medium
                font-size: 16px

        &__button
            padding: 0
            height: 100%
            background: none
            box-shadow: none
            color: var(--color-text)
            font-weight: bold
            font-size: 20px

            &--show
                display: flex
                justify-content: center
                align-items: center
                width: 50px
                height: 50px

                .ico
                    width: 18px
                    height: 18px

            &:hover
                background: @background
                color: @color

        &__hide
            --color-text: #bdbdbe

            &
                width: 50px
                height: 100%
                background: none
                box-shadow: none
                color: var(--color-text)

                .ico
                    width: 10px
                    height: 10px
                    fill: currentColor