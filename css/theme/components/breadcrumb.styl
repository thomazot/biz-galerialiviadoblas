.breadcrumb
    --color: #a9acac

    .main-container &
        max-width: 100%

    container()

    &__home
        .breadcrumb__link:before
            display: none

    &__link
        color: var(--color)
        font-weight: regular
        font-size: 14px

    &__last
        color: var(--primary)
        font-weight: regular
        font-size: 14px

    &__sep
        display: flex
        justify-content: center
        align-items: center
        padding: 0 10px
        color: var(--color)
        font-size: 7px

        &:before
            icon('\f054')

        span
            display: none