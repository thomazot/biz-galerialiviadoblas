.products
    --background: #000

    .owl-pagination
        margin: 20px 0 60px

    &--grid
        @media media-min-lg
            .owl
                &-wrapper
                    display: grid
                    max-width: 100%
                    grid-gap: 20px

                &-item
                    min-width: 100%

                    &:nth-child(1)
                        grid-area: item1

                    &:nth-child(2)
                        grid-area: item2

                    &:nth-child(3)
                        grid-area: item3

                    &:nth-child(4)
                        grid-area: item4

                    &:nth-child(5)
                        grid-area: item5

    &--left
        @media media-min-lg
            .owl
                &-wrapper
                    grid-template-areas: 'item1 item2 item3' 'item1 item4 item5'
                    grid-template-columns: 2fr 1fr 1fr

    &--right
        @media media-min-lg
            .owl
                &-wrapper
                    grid-template-areas: 'item2 item3 item1' 'item4 item5 item1'
                    grid-template-columns: 1fr 1fr 2fr

    &__title
        color: var(--primary)
        text-align: center
        font-weight: regular
        font-size: 20px

    &__list
        margin: 0 -16px
        width: auto

    &__item
        position: relative
        padding: 0

        .carrossel &
            padding: 0 16px

    &__header
        width: 100%
        height: 100%

        span, img
            display: block
            width: 100%
            height: 100%

        img
            object-fit: cover

    &__main
        position: absolute
        top: 0
        left: 0
        display: flex
        visibility: hidden
        justify-content: center
        align-items: center
        width: 100%
        height: 100%
        background: rgba(255, 255, 255, .6)
        text-align: center
        opacity: 0
        transition: all .2s ease-in-out

        .link-wishlist
            position: absolute
            top: 20px
            right: 20px
            z-index: 2

            .ico
                width: 30px
                height: 27px

        .price-box
            .old-price
                display: none

            .regular-price, .special-price
                .label
                    display: none

                .price
                    span
                        color: var(--primary)
                        font-weight: regular
                        font-size: 20px

        .price-box-parcelado
            --color: #3e3d41

            .preco-parcelado
                .s-juros
                    display: none

                &:before
                    content: 'ou '

                &, .num span, .de span, .value span
                    color: var(--color)
                    font-weight: regular
                    font-size: 14px

    &__link
        position: absolute
        top: 0
        left: 0
        z-index: 1
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, 0)

    &__case
        box-shadow: none

        &:hover
            .products__main
                visibility: visible
                opacity: 1

    &__name
        display: block
        padding-bottom: 14px
        text-transform: uppercase
        font-weight: medium
        font-size: 20px

    &__dimensions
        display: block
        padding-bottom: 14px
        font-weight: regular
        font-size: 18px