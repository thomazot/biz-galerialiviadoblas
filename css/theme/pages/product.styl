.catalog-product-view
    --color: #8a8a8a

    .breadcrumb
        max-width: 100%

.prod
    &__name
        h1
            font-weight: regular
            font-size: 20px

        .sku
            color: var(--color)
            font-weight: regular
            font-size: 20px

    &__infos
        padding-top: 20px
        color: var(--color)
        font-weight: regular
        font-size: 15px

        p + p
            padding-top: 10px

    &__availabled
        padding: 30px 0
        color: var(--color)
        font-weight: regular
        font-size: 12px

    &__prices
        .price-box
            display: flex
            align-items: center
            margin-bottom: 0

        .old-price
            margin-right: 10px
            margin-bottom: 0

            .price
                text-decoration: none

            .label, .price
                span
                    color: var(--color)
                    font-weight: regular
                    font-size: 16px

        .special-price, .regular-price
            .label, .price
                span
                    color: var(--primary)
                    font-weight: regular
                    font-size: 25px

        .price-box-parcelado
            .preco-parcelado
                .s-juros
                    display: none

                &:before
                    content: 'ou '

                &, .num span, .de span, .value span
                    color: var(--color)
                    font-weight: regular
                    font-size: 14px

    &__call-to-action
        display: flex
        justify-content: flex-start
        align-items: center
        margin-bottom: 50px

        .qty-wrapper
            display: none

        .add-to-links
            margin-left: 18px

        .add-to-cart
            margin-bottom: 0

        .add-to-cart-btn
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            max-width: 100%
            width: 190px
            height: 40px
            border-radius: 40px
            background: var(--button)
            color: var(--button-contrast)
            font-weight: regular
            font-size: 14px

            &:hover
                background: var(--button-hover)

    &__short
        &-title
            padding-bottom: 20px
            font-weight: medium
            font-size: 20px

        &-desc
            &.std
                color: var(--color)
                font-weight: regular
                font-size: 15px
                line-height: 1.8

                br
                    display: none

    @media media-min-lg
        &__img
            flex: 1
            min-width: 0

            .product-image-gallery
                box-shadow: none

            .product-image-container
                display: flex

            .product-image
                flex: 1
                min-width: 0

            .more-views
                order: -1
                margin-right: 20px
                width: 80px

            .product-image-thumbs
                display: block

        &__shop
            flex: 0 1 410px
            min-width: 0